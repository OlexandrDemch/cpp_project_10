#include <iostream>
#include <string>

using namespace std;

bool is_palindrome(string num_str);

int main() {
    int num;
    cout << "Enter a number: ";
    cin >> num;

    if (is_palindrome(to_string(num))) {
        cout << "The number is a palindrome" << endl;
    } else {
        cout << "The number is not a palindrome" << endl;
    }

    return 0;
}

bool is_palindrome(string num_str) {
    if (num_str.length() == 1) {
        return true;
    }
    
    if (num_str[0] == num_str[num_str.length() - 1]) {
        return is_palindrome(num_str.substr(1, num_str.length() - 2));
    } else {
        return false;
    }
}
