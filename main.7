#include <iostream>
using namespace std;

int sumOfDigits(int n) {
   if (n == 0) { 
      return 0;
   } else {
      return (n % 10) + sumOfDigits(n / 10); 
   }
}

int main() {
   int num;
   cout << "Введіть число: ";
   cin >> num;
   cout << "Сума цифр числа " << num << " дорівнює " << sumOfDigits(num) << endl;
   return 0;
}
