#include <iostream>

int sumArray(int arr[], int size) {
    if (size == 0) {  
        return 0;
    } else {
        return arr[size - 1] + sumArray(arr, size - 1);
    }
}

int main() {
    int arr[] = {1, 2, 3, 4, 5};
    int size = sizeof(arr) / sizeof(arr[0]);

    int sum = sumArray(arr, size);
    std::cout << "Sum of array elements is " << sum << std::endl;

    return 0;
}
