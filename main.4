#include <iostream>

using namespace std;

int power(int a, int n) {
    if (n == 0) {
        return 1;
    } else {
        return a * power(a, n - 1);
    }
}

int main() {
    int a, n;
    cout << "Enter base (a) and exponent (n): ";
    cin >> a >> n;
    cout << a << " to the power of " << n << " is " << power(a, n) << endl;
    return 0;
}
